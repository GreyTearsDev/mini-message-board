<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h1><%= title %></h1>
      <section class="section-messages">
        <h2> Messages </h2>
          <% messages.reverse().forEach(message => { %>
            <div class="message">
              <h3><%= message.user %></h3>
              <p><%= message.text %></p>
              <p class="timestamp">
                <%= `
                  ${message.added.toLocaleTimeString().slice(0, 5)} - ${message.added.toDateString()}`%>
              </p>
            </div>
          <% }) %>
      </section>
      <%- include("form.ejs") %>
    </div>
  </body>
</html>
